#!/bin/bash

#set -e

CR_CONFIG=$1
shift 1 # move the args so that $@ only passes args after "runtest <target>"

if [ "$CR_CONFIG" == "aura" ]; then
  GYP_GENERATOR_OUTPUT="out_aura" "${CR_DIR}"/build/gyp_chromium -Duse_aura=1
elif [ "$CR_CONFIG" == "cros" ]; then
  GYP_GENERATOR_OUTPUT="out_cros" "${CR_DIR}"/build/gyp_chromium -Dchromeos=1
elif [ "$CR_CONFIG" == "android" ]; then
  GYP_GENERATOR_OUTPUT="out_android" "${CR_DIR}"/build/gyp_chromium -DOS=android
else
  echo "Usage: cr-gyp <aura|cros|android>"
fi
