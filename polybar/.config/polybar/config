[settings]
screenchange-reload = true

;; Global WM Settings

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 0

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 0

;; Bar Settings

[bar/top]
; Use either of the following command to list available outputs:
; If unspecified, the application will pick the first one it finds.
; $ polybar -m | cut -d ':' -f 1
; $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor = ${env:MONITOR:LVDS1}

width = 100%
height = 26

;offset-x = 25
;offset-y = 25
radius = 0
fixed-center = true

background = #000000
foreground = #FFFFFF

line-size = 0
line-color = #f00

border-bottom-size = 3
border-bottom-color = #1ABB9B

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding-left = 1
padding-right = 2

; Number of spaces to add before/after each module
; Individual side values can be defined using:
;   module-margin-{left,right}
module-margin-left = 2
module-margin-right = 2

; Fonts are defined using <font-name>;<vertical-offset>
; Font names are specified using a fontconfig pattern.
;   font-0 = NotoSans-Regular:size=8;2
;   font-1 = MaterialIcons:size=10
;   font-2 = Termsynu:size=8;-1
;   font-3 = FontAwesome:size=10
; See the Fonts wiki page for more details
font-0 = Inconsolata:style=Bold:size=10:antialias=true
font-1 = FontAwesome:style=Regular:size=10

tray-position = none
tray-background = ${colors.background}
tray-padding = 0
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = true

cursor-click = pointer
cursor-scroll = ns-resize

; Modules are added to one of the available blocks
;   modules-left = cpu ram
;   modules-center = xwindow xbacklight
;   modules-right = ipc clock
modules-left = ewmh
modules-center = title
modules-right = date

; Restack the bar window and put it above the
; selected window manager's root
;
; Fixes the issue where the bar is being drawn
; on top of fullscreen window's
;
; Currently supported WM's:
;   bspwm
;   i3 (requires: `override-redirect = true`)
; wm-restack = bspwm

;----------------
; Modules
;----------------

[module/date]
type = internal/date
interval = 5

date = "%a"
time = "%H:%M"

label = %date% %time%

[module/ewmh]
type = internal/xworkspaces

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; Create click handler used to focus desktop
; Default: true
enable-click = false

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false

[module/title]
type = internal/xwindow

format = <label>

label = %title%
label-maxlen = 20
label-empty = Desktop

[module/powermenu]
type = custom/menu
format = <label-toggle> <menu>
format-foreground = ${colors.foreground}
format-padding = 0
format-margin = 0
menu-0-0 = " Shutdown"
menu-0-0-exec = shutdown now
menu-0-0-padding = 3
menu-0-0-background = ${colors.color1}
menu-0-0-foreground = ${colors.background}
menu-0-1 = " Reboot"
menu-0-1-exec = reboot
menu-0-1-padding = 3
menu-0-1-background = ${colors.color3}
menu-0-1-foreground = ${colors.background}
menu-0-2 = "× Back"
menu-0-2-padding = 3
menu-0-2-background = ${colors.background}
menu-0-2-foreground = ${colors.foreground}
label-open = 
label-open-padding = 3
label-close =
