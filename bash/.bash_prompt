# -*- mode: sh; -*-

if [ -f ~/.git-prompt.sh ]; then
    GIT_PS1_SHOWDIRTYSTATE=1
    . ~/.git-prompt.sh
fi

RESET="\033[00m"
BLACK="\033[0;30m"
RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
BLUE="\033[0;34m"
MAGENTA="\033[0;35m"
CYAN="\033[0;36m"
WHITE="\033[0;37m"

PROMPT_SYMBOL="$"

#
# Prompt format:
#
# USER@HOST:DIRECTORY (GIT BRANCH)$ COMMAND
#
PS1="\[${GREEN}\]\u@\h";           # username@hostname
PS1+="\[${RESET}\]:";
PS1+="\[${BLUE}\]\w";              # current working directory with full path
PS1+="\[${YELLOW}\]\$(__git_ps1)"; # git branch status
PS1+="\[${RESET}\]\${PROMPT_SYMBOL} ";
export PS1;
