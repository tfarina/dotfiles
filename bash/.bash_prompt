# -*- mode: sh; -*-

export GIT_PS1_SHOWDIRTYSTATE=1

RED="\033[1;31m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
PURPLE="\033[1;35m"
CYAN="\033[1;36m"
WHITE="\033[1;37m"
RESET="\033[m"

#
# Prompt format:
#
# USER at MACHINE in DIRECTORY (GIT BRANCH)
# $ COMMAND
#
PS1="\[${CYAN}\]\u"; # username
PS1+="\[${WHITE}\] at ";
PS1+="\[${GREEN}\]\h"; # hostname
PS1+="\[${WHITE}\] in ";
PS1+="\[${BLUE}\]\w"; # working directory full path
PS1+="\[${YELLOW}\]\$(__git_ps1) "; # git repository details
PS1+="\n";
PS1+="\[${WHITE}\]\$ \[${RESET}\]"; # `$` (and reset color)
export PS1;
