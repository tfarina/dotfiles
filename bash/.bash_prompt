# -*- mode: sh; -*-

if [ -f ~/.git-prompt.sh ]; then
    . ~/.git-prompt.sh
fi

export GIT_PS1_SHOWDIRTYSTATE=1

RESET="\033[00m"
BLACK="\033[0;30m"
RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
BLUE="\033[0;34m"
MAGENTA="\033[0;35m"
CYAN="\033[0;36m"
WHITE="\033[0;37m"

#
# Prompt format:
#
# USER@MACHINE:DIRECTORY (GIT BRANCH)$ COMMAND
#
PS1="\[${GREEN}\]\u@\h";  # username@hostname
PS1+="\[${RESET}\]:";
PS1+="\[${BLUE}\]\w";  # full current working directory path
PS1+="\[${YELLOW}\]\$(__git_ps1)"; # git repository details
PS1+="\[${RESET}\]\$ ";
export PS1;
